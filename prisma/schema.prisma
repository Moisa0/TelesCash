generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  password_hash String
  created_at    DateTime @default(now())
  wallet        Int

  transaction   Transaction[] // relacionamento 1-N
  categories Category[] //relacionamento de 1-n

  @@map("users")
}

model Transaction {
  id               String   @id @default(uuid())
  name_transaction String
  created_at       DateTime @default(now())
  amount           Int
  category         String




  @@map("transactions")
}

model Category {
  id String @id @default(uuid())
  name String

}

enum Type{
  credito
  debito

  @@map("type")
}
